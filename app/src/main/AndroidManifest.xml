<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="de.androidcrypto.whatsappchat.activity.ImageViewActivity"></activity>
        <activity
            android:name="de.androidcrypto.whatsappchat.activity.ChatActivity"
            android:parentActivityName="de.androidcrypto.whatsappchat.MainActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.activity.ProfileActivity" />
        <activity
            android:name="de.androidcrypto.whatsappchat.activity.FindFriendsActivity"
            android:parentActivityName="de.androidcrypto.whatsappchat.MainActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.activity.PhoneLoginActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.activity.GroupChatActivity" />
        <activity
            android:name="de.androidcrypto.whatsappchat.activity.SettingsActivity"
            android:parentActivityName="de.androidcrypto.whatsappchat.MainActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.activity.RegisterActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.activity.LoginActivity" />
        <activity android:name="de.androidcrypto.whatsappchat.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>